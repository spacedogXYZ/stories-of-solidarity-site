<div class="storyPost container-fluid">
<h2>Share Your Story</h2>
<div class="row">
    <div class="col-md-4">
        Post 
        <% if (Solidarity.user !== undefined ) { %>
        as <a href="#auth/user"><%= data.user %></a>
        or <a href="#auth/logout">Logout</a>
        <% } else { %>
        anonymously or <a href="#auth/login?success=share" >Login</a>
        <% } %>
    </div>
</div>

<form action="<%= Solidarity.apiRoot %>story" method="POST" class="form-horizontal">
    <fieldset>
        <div class="form-group">
            <label for="title" class="col-sm-1">Title:</label>
            <input id="title" class="col-xs-12 col-sm-6" name="title" value="" type="text" autocomplete="on" placeholder="">
        </div>

        <div class="form-group">
            <label for="content" class="col-sm-1">Story:</label>
            <textarea id="content" class="col-xs-12 col-sm-10" rows="6" name="content" value="" required="required"></textarea>
        </div>

        <div class="form-group">
            <label for="location" class="col-sm-1">Location:</label>
            <div class="input-group col-xs-12 col-sm-6">
                <input id="location" class="col-xs-12" name="location" value="" type="text" autocomplete="on" placeholder="">
                <div class="input-group-btn">
                    <button type="button" class="btn btn-sm line-height-1"><i class="glyphicon glyphicon-screenshot"></i></button>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="photo" class="col-sm-1">Photo:</label>
            <input type="file" class="col-sm-6 filestyle" name="photo" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Post!" />
        </div>
    </fieldset>
</form>

</div>