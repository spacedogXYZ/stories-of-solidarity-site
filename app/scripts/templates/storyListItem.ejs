<div class="item story" id="story-<%=data.id%>">
    <h2><%= data.title %></h2>
    <div class="body">
        <% if (data.content.length > 160) { %>
            <%- data.content.slice(0,160) %>...
        <% } else { %>
            <%- data.content %>
        <% } %>
        <span class="readMore">
            <a class="readMore" href="#read/story/<%= data.id %>">+ read more</a>
        </span>
    </div>
    <h3><%= (new Date(updated_at)).toDateString() %><br>
        by <a href="#read/author/<%-data.author_user.id%>"><%- data.author_user.first_name %> <%- data.author_user.last_name %></a>
        </h3>
</div>